<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl1">
        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            android:layout_width="60px"
            android:layout_height="60px"
            android:id="@+id/ImgBack"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />
        <TextView
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20.5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:text="Total Rp.10.000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TvTotalHargaOrder"
            android:layout_toRightOf="@id/ImgBack" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/rl1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#03ac8e"
        android:id="@+id/rl22" />
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl13">
        <Button
            android:textColor="#ffffff"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="#f39c12"
            android:text="ORDER NOW"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/BtnOrderNow"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_above="@id/rl13"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#03ac8e"
        android:id="@+id/rl222" />
    <ListView
        android:layout_below="@id/rl22"
        android:layout_above="@id/rl222"
        android:id="@+id/LvMenuOrder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>