
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true">
   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl2">
   <TextView
            android:layout_centerVertical="true"
            android:textColor="?attr/colorPrimary"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
        android:text="REPORT TRANSACTION"/>
   
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/rl2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#03ac8e"
        android:id="@+id/rl22" />
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl13">
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:text="PROVIT : Rp.00,-"
            android:layout_toRightOf="@id/ImgViewDelete"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TvTotalProvit"
            android:layout_marginLeft="5dp" />
        <Button
            android:visibility="gone"
            android:textColor="#ffffff"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="#f39c12"
            android:text="Export"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BtnExport"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />
    </RelativeLayout>
    <RelativeLayout
        android:background="#03ac8e"
        android:layout_above="@id/rl13"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:id="@+id/rl222" />
    <ListView
        android:layout_below="@id/rl22"
        android:layout_above="@id/rl222"
        android:id="@+id/LvTransaction"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>